@using System.Linq
@model List<Wedding.AdminPanel.Controllers.HomeController.StatisticEntry>

@if (Model.Count > 0)
{
    <div class="row mt-2">
        @foreach (var order in Model.GroupBy(o => o.Status))
        {
            <div class="col card bg-light m-1">
                <div class="card-body">
                    <div>
                        @order.Key - @order.Count()
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="mt-2">
        Нет данных по заказам в выбранный промежуток
    </div>
}