@using Wedding.DAL.Data.Entities
@model List<Salon>

<div class="modal" id="addSalonModal" tabindex="-1">
  <div class="modal-dialog">
    <div id="createSalonModal" class="modal-content">
      
    </div>
  </div>
</div>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <a onclick="onAddSalonHandler()" class="btn btn-success">
                        <span>Добавить</span>
                    </a>
                </div>
            </div>
        </div>
        <div id="table-container">

        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>

const loadAndUpdateData = () => {
    $.get("/Salon/Table", function(data) {
        $("#table-container").html(data)
    })
}
const onAddSalonHandler = () => {
    $.get("/Salon/Create", function(data) { 
        $("#createSalonModal").html(data)
        $("#addSalonModal").show()
    })
}
const onUpdateSalonHandler = (id) => {
    $.get("/Salon/Update?id=" + id, function(data) { 
        $("#createSalonModal").html(data)
        $("#addSalonModal").show()
    })
}

$(document).ready(() => loadAndUpdateData())

</script>